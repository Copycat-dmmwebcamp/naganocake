<div class="container">
    <div class="row">
      <div class="col-xs-1"> </div>
        <div class="col-xs-10">
          <h3>ショッピングカート</h3>

          <%= render "end_users/shared/error_messages", resource: @cart_item %>

          <div style="text-align : right; margin-bottom: 10px;">
            <%= link_to "カートを空にする", end_users_carts_destroy_all_path, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
          </div>

          <% total = 0 %>

          <table class="table table-striped">
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
	            <th>数量</th>
	            <th>小計</th>
	            <th></th>
            </tr>

            <% @cart_items.each do |cart_item| %>
	        <tr>
	          <td>
	            <%= attachment_image_tag(cart_item.item, :item_image, :fill, 30, 30, allback: "no-image-mini.jpg") %>
		        <%= cart_item.item.item_name %>
	          </td>
	          <td>
                <%= (cart_item.item.without_tax.to_i * 1.1).round %>円
	          </td>
	          <td>
                <%= form_for(cart_item, url:end_users_cart_path(cart_item.id)) do |f| %>
                  <%= f.text_field :item_number, :size => "5px" %>
                  <%= f.submit "変更", class: "btn btn-primary" %>
                <% end %>
	          </td>
	          <td>
                <%= (cart_item.item.without_tax.to_i * cart_item.item_number * 1.1).round %>円
                <% total += cart_item.item.without_tax.to_i * cart_item.item_number %>
	          </td>
	          <td>
	  	        <%= link_to '削除する', end_users_cart_path(cart_item), method: :delete %>
	          </td>
	        </tr>
            <% end %>
          </table>

          <%= link_to "買い物を続ける", root_path, class: "btn btn-primary", :style=> "margin: 10px;"%>

          <table class="table table-bordered right" style = "width:25%;">
            <tr>
              <td style = "height:30%; text-align : center;">合計金額</td>
              <td style = "height:30%; text-align: right;">
                <%= (total * 1.1).round %>円
              </td>
            </tr>
          </table>

          <% if @cart_items.count != 0 %>
          <div style="text-align : center; margin: 20px;"> 
            <%= link_to "情報入力に進む", new_end_users_order_path, class: "btn btn-primary", :style=> "width:40%;" %>
          </div>
          <% end %>
        </div>
    </div>
</div>

