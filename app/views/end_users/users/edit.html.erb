<h2>登録情報編集</h2>

<%= form_for(@user, url: end_users_user_path) do |f| %>

<p>氏名</p>
<%= f.label :（性） %>
<%= f.text_field :family_name_kanji %>
<%= f.label :（名） %>
<%= f.text_field :first_name_kanji %>

<p>フリガナ</p>
<%= f.label :（セイ） %>
<%= f.text_field :family_name_kana %>
<%= f.label :（メイ） %>
<%= f.text_field :first_name_kana %>

<p>郵便番号（ハイフンなし）</p>
<%= f.text_field :postal_code %>

<p>住所</p>
<%= f.text_field :address %>

<p>電話番号（ハイフンなし）</p>
<%= f.text_field :phone_number %>

<p>メールアドレス</p>
<%= f.text_field :email %>

<%= f.submit '編集内容を保存する' %>
<% end %>
<%= link_to "退会する", end_users_users_leave_path(current_end_user.id) %>