<h2>配送先登録/一覧</h2>

<h5><%= notice %></h5>

<%= render "end_users/shared/error_messages", resource: @delivery_place %>

<%= form_for @delivery_place, url: end_users_deliveries_path do |f| %>
	<table>
		<tbody>
			<tr>
				<td><%= f.label :name, "郵便番号(ハイフンなし)" %></td>
				<td><%= f.text_field :postal_code %></td>
			</tr>
			<tr>
				<td><%= f.label :name, "住所"  %></td>
				<td><%= f.text_field :address, :size=>"60" %></td>
			</tr>
			<tr>
				<td><%= f.label :name, "宛名"  %></td>
				<td><%= f.text_field :destination %></td>
				<td><%= f.submit '登録する', class: "btn btn-success btn-lg" %></td>
			</tr>
		</tbody>
	</table>
<% end %>


<table class="table">
	<thead>
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @delivery_places.each do |delivery_place| %>
		<!-- ログインユーザの一致を確認する -->
			<% if delivery_place.end_user_id == current_end_user.id %>
				<tr>
					<td><%= delivery_place.postal_code %></td>
					<td><%= delivery_place.address %></td>
					<td><%= delivery_place.destination %></td>
					<td><%= link_to '編集する', edit_end_users_delivery_path(delivery_place), class: "btn btn-primary btn-sm edit_end_users_delivery_#{delivery_place.id}" %></td>
					<td><%= link_to '削除する', end_users_delivery_path(delivery_place), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger btn-sm destroy_end_users_delivery_#{delivery_place.id}" %></td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>