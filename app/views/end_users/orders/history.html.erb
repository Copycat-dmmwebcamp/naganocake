<div class="body">
  <div class="container">
       <div class="row">

        
            <div class="text-left" style="margin-left: 80px; width: 140px;"><h4 style="background-color:#D3D3D3"　 class="text-center">注文履歴一覧</h4>
            </div>

          <div class="col-sm-11">
            <table class=" table table-striped table-bordered">

                <thead>
                    <tr class="active">
                        <th>注文日</th>
                        <th>配送先</th>
                        <th>注文商品</th>
                        <th>支払金額</th>
                        <th>ステータス</th>
                        <th>注文詳細</th>
                    </tr>
                </thead>

                <% @orders.each do |order| %>

                <tbody>
                    <tr>
                        <th>
              	            <%= order.created_at.strftime('%Y/%m/%d') %>
                        </th>

                        <!-- 配送先 -->
                        <th>
              	            <%= order.postal_code %>
              	            <br>
              	            <%= order.delivery_address %>
              	            <br>
              	            <%= order.destination %>
                        </th>

                        <!-- 注文商品 each文を使って取り出す　-->
                        <th>
                            <% order.order_items.each do |order_item| %>
                            <p>
                                <%= order_item.item.item_name %>
                            </p>
                            <% end %>
                        </th>

                        <!-- 支払金額 -->
                        <th>
                            <%= order.billing_amount.to_s(:delimited) %>円
                        </th>

                        <th>
                          <%= order.order_status_i18n %>
                        </th>

                        <th>
              	            <%= link_to '表示する', end_users_orders_history_show_path(order.id),class: "btn btn-primary btn-sm"  %>
                        </th>
          	        </tr>
                </tbody>
                <% end %>
            </table>
          </div>
       </div>
   </div>
</div>     
