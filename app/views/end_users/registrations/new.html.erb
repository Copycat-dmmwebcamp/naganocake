<div class="container">
  <div class="row">
    <div class="text-center col-md-3 col-md-offset-1" style="background-color: #eeeeee">
      <h3>新規会員登録</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-1">
      <%= render "end_users/shared/error_messages", resource: resource %>
    </div>
  </div>

  <div class="row end-user-new">
    <div class="col-md-offset-2">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <table>
          <tbody>
            <tr class="end-user-signup-table thread1">
              <td><label>名前</label></td>
              <td><%= f.label :（姓） %></td>
              <td><%= f.text_field :family_name_kanji, autofocus: true, class: "name" %>　</td>
              <td><%= f.label :（名） %></td>
              <td><%= f.text_field :first_name_kanji, autofocus: true, class: "name" %></td>
            </tr>
            <tr class="end-user-signup-table">
              <td><label>フリガナ</label></td>
              <td><%= f.label :（セイ） %></td>
              <td><%= f.text_field :family_name_kana, autofocus: true, class: "name" %></td>
              <td><%= f.label :（メイ） %></td>
              <td><%= f.text_field :first_name_kana, autofocus: true, class: "name" %></td>
            </tr>
            <tr class="end-user-signup-table">
              <td><%= f.label :email %></td>
              <td></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
              <td></td>
              <td></td>
            </tr>
            <tr class="end-user-signup-table">
              <td><%= f.label :郵便番号（ハイフンなし） %></td>
              <td></td>
              <td><%= f.text_field :postal_code, autofocus: true, class: "postal_code", id: "address_zipcode" %></td>
              <td></td>
              <td></td>
            </tr>
            <tr class="end-user-signup-table">
              <td><%= f.label :住所 %></td>
              <td></td>
              <td colspan="5"><%= f.text_field :address, autofocus: true, :size => "50", class: "address", id:"address_name" %></td>
            </tr>
            <tr class="end-user-signup-table">
              <td><%= f.label :電話番号（ハイフンなし） %></td>
              <td></td>
              <td><%= f.text_field :phone_number, autofocus: true, class: "name" %></td>
              <td></td>
              <td></td>
            </tr>
            <tr class="end-user-signup-table">
              <td><%= f.label :パスワード（６文字以上） %></td>
              <td></td>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
              <td></td>
              <td></td>
            </tr>
            <tr class="end-user-signup-table">
              <td><%= f.label :確認用 %></td>
              <td></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
              <td></td>
              <td></td>
            </tr>
          </tbody>
        </table>
        <div class="row end-user-regist-b" style="margin-left: 300px;">
          <%= f.submit "新規登録", class: "btn btn-success end-user-regist-btn" %>
        </div>
      </div>
    <% end %><br>
  </div>

  <div class="row">
    <div class="text-center col-md-3 col-md-offset-1" style="background-color: #eeeeee">
      <h3>既に登録済みの方</h3>
    </div>
  </div><br>
  <div class="row">
    <div class="col-md-6 col-md-offset-2">
      <h4><%= link_to "こちら", new_end_user_session_path %>　からログインしてください。</h4>
    </div>
  </div>

 </div>

</div>