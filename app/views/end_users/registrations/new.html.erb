
<div class="container">
 <div class="row">
  <h2>新規会員登録</h2>
 </div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

 <div class="row">
  <label class="col-xs-3">名前</label>
   <div class="pull-left">
    <%= f.label :（姓）　 %>
    <%= f.text_field :family_name_kanji, autofocus: true, class: "name" %>
    <%= f.label :（名）　 %>
    <%= f.text_field :first_name_kanji, autofocus: true, class: "name" %>
   </div>
 </div>

 <div class="row">
  <label class="col-xs-3">フリガナ</label>
   <%= f.label :（セイ） %>
   <%= f.text_field :family_name_kana, autofocus: true, class: "name" %>
   <%= f.label :（メイ） %>
   <%= f.text_field :first_name_kana, autofocus: true, class: "name" %>
 </div>

 <div class="row">
  <%= f.label :email, class: "col-xs-3" %>
  <label>　　　　</label>
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
 </div>

 <div class="row">
  <%= f.label :郵便番号（ハイフンなし）, class: "col-xs-3" %>
  <label>　　　　</label>
  <%= f.text_field :postal_code, autofocus: true, class: "name" %>
 </div>

 <div class="row">
  <%= f.label :住所, class: "col-xs-3" %>
  <label>　　　　</label>
  <%= f.text_field :address, autofocus: true, class: "name" %>
 </div>

 <div class="row">
  <%= f.label :電話番号（ハイフンなし）, class: "col-xs-3" %>
  <label>　　　　</label>
  <%= f.text_field :phone_number, autofocus: true, class: "name" %>
 </div>

 <div class="row">
  <%= f.label :パスワード（６文字以上）, class: "col-xs-3" %>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %>
  <label>　　　　</label>
  <%= f.password_field :password, autocomplete: "new-password" %>
 </div>

 <div class="row">
  <%= f.label :確認用, class: "col-xs-3" %>
  <label>　　　　</label>
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
 </div>

 <div class="row">
  <%= f.submit "新規登録", class: "btn btn-success center-block" %>
 </div>
<% end %>
</div>
<h4>既に登録済みの方</h4>

<%= render "end_users/shared/links" %>   からログインしてください。