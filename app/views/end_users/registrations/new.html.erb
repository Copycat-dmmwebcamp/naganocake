
<div class="container">
 <div class="row">
  <div class="end-user-title text-center col-md-3 col-md-offset-1">
    <h3>新規会員登録</h3>
  </div>
 </div>

 <%= render "end_users/shared/error_messages", resource: resource %>

 <div class="end-user-new">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

   <div class="row input-form">
    <label class="col-xs-3">名前</label>
     <div class="pull-left">
      <%= f.label :（姓）　 %>
      <%= f.text_field :family_name_kanji, autofocus: true, class: "name" %>　
      <%= f.label :（名）　 %>
      <%= f.text_field :first_name_kanji, autofocus: true, class: "name" %>
     </div>
   </div>

   <div class="row input-form">
    <label class="col-xs-3">フリガナ</label>
     <%= f.label :（セイ） %>
     <%= f.text_field :family_name_kana, autofocus: true, class: "name" %>　
     <%= f.label :（メイ） %>
     <%= f.text_field :first_name_kana, autofocus: true, class: "name" %>
   </div>

   <div class="row input-form">
    <%= f.label :email, class: "col-xs-3" %>
    <label>　　　　</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
   </div>

   <div class="row input-form">
    <%= f.label :郵便番号（ハイフンなし）, class: "col-xs-3" %>
    <label>　　　　</label>
    <%= f.text_field :postal_code, autofocus: true, class: "name", :size => "55" %>
   </div>

   <div class="row input-form">
    <%= f.label :住所, class: "col-xs-3 end-user-address" %>
    <label>　　　　</label>
    <%= f.text_field :address, autofocus: true, class: "name" %>
   </div>

   <div class="row input-form">
    <%= f.label :電話番号（ハイフンなし）, class: "col-xs-3" %>
    <label>　　　　</label>
    <%= f.text_field :phone_number, autofocus: true, class: "name" %>
   </div>

   <div class="row input-form">
    <%= f.label :パスワード（６文字以上）, class: "col-xs-3" %>
    <label>　　　　</label>
    <%= f.password_field :password, autocomplete: "new-password" %>
   </div>

   <div class="row input-form">
    <%= f.label :確認用, class: "col-xs-3" %>
    <label>　　　　</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
   </div>

   <div class="row end-user-regist-b">
    <%= f.submit "新規登録", class: "btn btn-success end-user-regist-btn" %>
   </div>
  <% end %><br>

  <div class="row">
    <div class="end-user-title text-center col-md-3 col-md-offset-1">
      <h3>既に登録済みの方</h3>
    </div>
  </div><br>
  <div class="row">
    <div class="col-md-6 col-md-offset-2">
      <%= link_to "こちら", new_end_user_session_path %>　からログインしてください。
    </div>
  </div>

 </div>

</div>