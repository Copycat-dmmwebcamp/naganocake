<div class="body">
  <div class="container">
       <div class="row">

       		 <div>
        　　　<h2>ジャンル検索</h2>
				<%= render "end_users/items/categories", categories: @categories %>
　　　　　　	</div>
	
       	    <% if @id == 0 %>
       	    	<h2>商品一覧</h2><h4>全<%= @items.count %>件</h4>
       	    <% else %>
       	    	<h2><%= @category.name %>一覧 </h2><h4>全<%= @items.count %>件</h4>
       	    <% end %>

       	    <% @items.each do |item| %>
       	    	<div>
       				 <div>
                      <%= link_to end_users_item_path(item.id) do %>
                        <%= attachment_image_tag(item, :item_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %>
                        <% end %>
                    </div>
                    <div>
                        <span>商品名</span>
                        <td><%= link_to item.item_name, end_users_item_path(item.id) %></td>
                    </div>
                    <div>
                         <span>価格</span> 
                        <% tax_include = item.without_tax.to_i * 1.1  %>
                        <%= tax_include.round.to_s(:delimited)   %>
                    </div>
                    <div>
                    	<% if  item.item_status == 'soldout' %>
                    	 売り切れ中です
                    	<% end %>
                    </div>
       			</div>
       		<% end %>
          <%= paginate @items %>
       </div>
   </div>
</div>