<div class="body">
    <div class="container">
       <div class="row">
          <div class="col-xs-3">

           		<div style="margin-top: 50px;">
    				      <%= render "end_users/items/categories", categories: @categories %>
    　　　　　　</div>
          </div>


          <div class="col-xs-9">
     	    <% if @id == 0 %>
     	    	<h2>商品一覧</h2><h4>全<%= @items.count %>件</h4>
     	    <% else %>
     	    	<h2><%= @category.name %>一覧 </h2><h4>全<%= @items.count %>件</h4>
     	    <% end %>

       	    	<div class="item-picup">
              <% @items.each do |item| %>
                  <div class = "A">
                      <span class = "imagWrap">
                 				  <div>
                              <%= link_to end_users_item_path(item.id) do %>
                                  <%= attachment_image_tag(item, :item_image, :fill, 100, 100, fallback: "no-image-mini.jpg", size:'130x100') %>
                              <% end %>
                          </div>
                          <br>
                          <div>
                              <span>商品名</span>
                              <td><%= link_to item.item_name, end_users_item_path(item.id) %></td>
                          </div>
                          <div>
                               <span>¥</span>
                              <% tax_include = item.without_tax.to_i * 1.1  %>
                              <%= tax_include.round.to_s(:delimited)   %>
                          </div>
                          <div>
                            	<% if  item.item_status == 'soldout' %>
                            	 売り切れ中です
                            	<% end %>
                          </div>
                      </span>
                    </div>
                    <% end %>
                </div>

       			</div>
            <div style="float: right;">
                <%= paginate @items %>
            </div>
        </div>
    </div>
</div>
