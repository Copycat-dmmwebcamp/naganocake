<h2><%= @user.family_name_kanji %><%= @user.first_name_kanji %>の会員情報編集</h2>

<%= render "admins/shared/error_messages", resource: @user %>

<p>顧客ID</p>
<%= @user.id %>

<%= form_for(@user, url: admins_user_path) do |f| %>

<p>氏名</p>
<%= f.text_field :family_name_kanji %><%= f.text_field :first_name_kanji %>

<p>フリガナ</p>
<%= f.text_field :family_name_kana %><%= f.text_field :first_name_kana %>

<p>郵便番号</p>
<%= f.text_field :postal_code %>

<p>住所</p>
<%= f.text_field :address %>

<p>電話番号</p>
<%= f.text_field :phone_number %>

<p>メールアドレス</p>
<%= f.text_field :email %>

<!-- ラジオボタン -->
<%= f.radio_button :user_status, :true %>
<%= f.label :user_status_true, "有効" %>
<%= f.radio_button :user_status, :false %>
<%= f.label :user_status_false, "退会済み" %>

<%= f.submit '変更を保存する' %>
<% end %>