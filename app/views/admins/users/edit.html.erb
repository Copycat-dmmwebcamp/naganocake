<div class="container">
  <div class="row">
    <div class="col-xs-4" style="background-color: #eeeeee;">
      <h2><%= @user.full_name_kanji %>の会員情報編集</h2>
    </div>
  </div>

<%= render "admins/shared/error_messages", resource: @user %>

<div class="row" style="margin-top: 30px;">
 <div class="form-group">
 <p class="col-xs-2">顧客ID</p>
 <%= @user.id %>
 </div>
</div>

<%= form_for(@user, url: admins_user_path) do |f| %>

<div class="row">
 <div class="form-group">
  <p class="col-xs-2">氏名</p>
  <%= f.text_field :family_name_kanji %> 
  <%= f.text_field :first_name_kanji %>
 </div>
</div>

<div class="row">
 <div class="form-group">
  <p class="col-xs-2">フリガナ</p>
  <%= f.text_field :family_name_kana %> 
  <%= f.text_field :first_name_kana %>
 </div>
</div>

<div class="row">
 <div class="form-group">
  <p class="col-xs-2">郵便番号</p>
  <%= f.text_field :postal_code %>
 </div>
</div>

<div class="row">
 <div class="form-group">
  <p class="col-xs-2">住所</p>
  <%= f.text_field :address %>
 </div>
</div>

<div class="row">
 <div class="form-group">
  <p class="col-xs-2">電話番号</p>
  <%= f.text_field :phone_number %>
 </div>
</div>

<div class="row">
 <div class="form-group">
  <p class="col-xs-2">メールアドレス</p>
  <%= f.text_field :email %>
 </div>
</div>

<div class="row">
 <div class="form-group">
<!-- ラジオボタン -->
  <p class="col-xs-2">会員ステータス</p>
  <%= f.radio_button :user_status, :true %>
  <%= f.label :user_status_true, "有効" %>
  <%= f.radio_button :user_status, :false %>
  <%= f.label :user_status_false, "退会済み" %>
 </div>
</div>

<div class="row">
 <div class="form-group col-xs-2">
  <div style="margin-bottom: 60px;">
   <%= f.submit '変更を保存する', class: "btn btn-primary" %>
  </div>
 </div>
</div>

<% end %>

</div>