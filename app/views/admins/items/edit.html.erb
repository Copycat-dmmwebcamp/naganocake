
<div class="body">
  <div class="container">
       <div class="row">
        <h2>商品編集</h2>
          <%= render "admins/shared/error_messages", resource: @item %>
          <%= form_for(@item, url: admins_item_path) do |f| %>
          
            <%= f.attachment_field :item_image %>

            <div>
                <%= f.label :商品名 %>
                <%= f.text_field :item_name %>
            </div>
         
            <div>
                <%= f.label :商品説明 %> <!-- ここを変更 -->
                <%= f.text_field :item_explanation %>
            </div>

            <div>
                <%= f.label :ジャンル %>
                <%= f.collection_select :category_id, Category.all, :id, :name %>
            </div>

            <div>
                <%= f.label :税抜価格 %> <!-- ここを変更 -->
                <%= f.text_field :without_tax %>
            </div>

            <div class="field">
                <%= f.label :販売ステータス %>
                <%= f.select :item_status, Item.item_statuses.keys.map {|k| [I18n.t("enums.item.item_status.#{k}"), k]} %>
            </div>

             <div>
              <%= f.label :おすすめ商品 %>
              <%= f.radio_button :recomend, :true %>
               <%= f.label :recomend_true, "有効" %>
               <%= f.radio_button :recomend, :false %>
               <%= f.label :recomend_false, "無効" %>
             </div>   
         
            <div>
                <%= f.submit "変更を保存" %>
            </div>
         <% end %>
       </div>
   </div>
</div>
