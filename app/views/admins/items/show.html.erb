
<div class="body">
  <div class="container">
	   <div class="row">
	    <h2>商品詳細</h2>	

                    <div>
                        <%= attachment_image_tag(@item, :item_image, :fill, 300, 300, fallback: "no-image-mini.jpg") %>
                    </div>
                    <div>
                        <span>商品名</span>
                        <%= @item.item_name %>
                    </div>

                    <div>
                        <span>商品説明</span>
                        <%= @item.item_explanation %>
                    </div>
                    <div>
                         <span>税込価格（税抜価格）</span> 
                        <% tax_include = @item.without_tax.to_i * 1.1  %>
                        <%= tax_include.round.to_s(:delimited)   %>
                        (<%= (@item.without_tax.to_i).to_s(:delimited) %>)
                    </div>
                    <div>
                        <span>販売ステータス</span>
                        <%= @item.item_status_i18n %>
                    </div>
                    <div>
                        <span>おすすめ商品</span>
                        <% if @item.recomend == true %>
                        有効
                       <% elsif @item.recomend == false %>
                        無効
                       <% end %>
                    </div>

                     <%= link_to "編集する", edit_admins_item_path(@item.id), class: "btn btn-danger" %>

                     <%= link_to "商品を削除する", admins_item_path(@item.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
       </div>
   </div>
</div>