<div class="container">
  <div class="row admin-user-login-title">
    <div class="admin-title text-center col-md-3  col-md-offset-1">
      <h3>管理者用ログイン</h3>
    </div>
  </div>

      <!-- ログイン画面のエラーメッセージ表示 -->
  <div class="row">
    <div class="col-md-6  col-md-offset-1">
      <font color="red">
        <%- flash.each do |name, msg| -%>
          <%= content_tag :div, msg, id: "flash_#{name}" %>
        <%- end -%>
      </font>
    </div>
  </div><br>


  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="admin-field">
          <%= f.label :メールアドレス　 %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"60" %>
        </div>

        <div class="admin-field">
          <%= f.label :パスワード　　 %>　
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="admin-field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "自動ログインにする" %>
          </div>
        <% end %>

        <div class="admin-field text-right">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "管理者 新規登録へ", new_registration_path(resource_name) %><br />
          <% end %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "パスワードを忘れたときは", new_password_path(resource_name) %><br />
          <% end %>
        </div>

        <div class="actions-admin">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
